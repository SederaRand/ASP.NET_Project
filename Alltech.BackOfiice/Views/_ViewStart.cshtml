@{

    string template = "";
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    if (controller == "Security" ) {
        template = "~/Views/Shared/_LayoutLogin.cshtml";
    }
    else
    {
        template = "~/Views/Shared/_LayoutAdmin.cshtml";
    }

    Layout = template;
}

<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sufee Admin - HTML5 Admin Template</title>
    <link rel="icon" href="~/Images/AdminLTELogo.png" type="image/x-ico" />

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Content/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/buttons.bootstrap4.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="../../index3.html" class="brand-link">
                <img src="~/images/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">AdminLTE 3</span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                @{
                    string username = HttpContext.Current.User.Identity.Name;
                    if (!string.IsNullOrEmpty(username))
                    {
                        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                            <div class="image">
                                <img src="~/images/avatar5.png" class="img-circle elevation-2" alt="User Image">
                            </div>
                            <div class="info">
                                <a href="#" class="d-block"> @Html.ActionLink(HttpContext.Current.User.Identity.Name, "Lougout", "Account")</a>
                            </div>
                        </div> }
                }

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <!-- Main content -->
            @RenderBody();
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

    </div>


    <!-- jQuery -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Scripts/admin/bootstrap.bundle.min.js"></script>
    <!-- DataTables  & Plugins -->
    <script src="~/Scripts/admin/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/admin/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/admin/dataTables.responsive.min.js"></script>
    <script src="~/Scripts/admin/responsive.bootstrap4.min.js"></script>
    <script src="~/Scripts/admin/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/admin/buttons.bootstrap4.min.js"></script>
    <script src="~/Scripts/admin/jszip.min.js"></script>
    <script src="~/Scripts/admin/pdfmake.min.js"></script>
    <script src="~/Scripts/admin/vfs_fonts.js"></script>
    <script src="~/Scripts/admin/buttons.html5.min.js"></script>
    <script src="~/Scripts/admin/buttons.print.min.js"></script>
    <script src="~/Scripts/admin/buttons.colVis.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Scripts/admin/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Scripts/admin/demo.js"></script>
    <!-- Page specific script -->
    <script>
        $(function () {
            
           $('#example1').DataTable({
                "paging": true,
                "processing": true,
                "serverSide": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "ajax": {
                    "url": "https://localhost:44301/api/Products",
                    "type": "GET",
                    "dataType": "json"                   
                },
                "columnDefs": [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }],
                "columns": [
                    { "data": "Id_prod", "name":"ID Product", "autoWidth": true },
                    { "data": "Name_prod", "name":"Name", "autoWidth": true },
                    { "data": "Desc_prod", "name":"Description ", "autoWidth": true },
                    { "data": "Category_prod", "name":"Category", "autoWidth": true },
                    { "data": "Images", "name":"Images", "autoWidth": true },
                    { "data": "Quantity_prod", "name":"Stock ", "autoWidth": true },
                    { "data": "Status_prod", "name":"Publishing", "autoWidth": true },
                    { "data": "Price_prod", "name":"Price", "autoWidth": true },
                    { "data": "Date_entry_Prod", "name": "Date", "autoWidth": true },
                    {
                        "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="/Products/Edit/' + full.CustomerID + '">Edit</a>'; }
                    },
                    {
                        data: null, render: function (data, type, row) {
                            return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.CustomerID + "'); >Delete</a>";
                        }
                    },

                ]
            });
        });

        function DeleteData(CustomerID)
        {
            if (confirm("Are you sure you want to delete ...?"))
            {
                Delete(CustomerID);
            }
            else
            {
                return false;
            }
        }


        function Delete(CustomerID)
    {
        var url = '@Url.Content("~/")' + "DemoGrid/Delete";

        $.post(url, { ID: CustomerID }, function (data)
                {
                    if (data)
                    {
                        oTable = $('#example').DataTable();
                        oTable.draw();
                    }
                    else
                    {
                        alert("Something Went Wrong!");
                    }
                });
    }



    </script>
</body>
</html>

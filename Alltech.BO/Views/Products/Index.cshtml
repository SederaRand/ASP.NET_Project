@model IEnumerable<Alltech.DataAccess.Models.Products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Products</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active"><a href="#">Home</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- /.row -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="col-md-1">
                            @Html.ActionLink("Add", "Create", "Products", routeValues: null, htmlAttributes: new { @class = "btn btn-danger btn-block btn-block", @role = "button" })
                        </div>
                        <div class="card-tools">
                            @using (Html.BeginForm())
                            {
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    @Html.TextBox("SearchString")
                                    <input type="submit" value="Search" />
                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                            </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Category
                                    </th>
                                    <th>
                                        Images
                                    </th>
                                    <th>
                                        Quantity
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    <th>
                                        Price
                                    </th>
                                    <th>
                                        Date
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name_prod)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Desc_prod)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Category_prod)
                                        </td>
                                        <td>
                                            <img src="@Html.DisplayFor(modelItem => item.Images)" widht="100px" height="100px" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Quantity_prod)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status_prod)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price_prod)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Date_entry_Prod)
                                        </td>
                                        <td>
                                            <div class="card-body row">
                                                <div class="col-md-3">
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id_prod }, htmlAttributes: new { @class = "btn btn-info btn-block btn-block" }) 
                                                </div>
                                                <div class="col-md-3">
                                                    @Html.ActionLink("Details", "Details", new { id = item.Id_prod }, htmlAttributes: new { @class = "btn btn-info btn-block btn-block", @role = "button" })
                                                   </div>
                                                <div class="col-md-3">
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id_prod }, htmlAttributes: new { id = item.Id_prod, @class = "btn btn-danger btn-block btn-block", @role = "button" })
                                                    </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer clearfix">
                        <ul class="pagination pagination-sm m-0 float-right">
                            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.row -->
    </div>

</section>

